@model Category

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Update Category</h2>
            <hr />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="input-group-text" style="text-align: left;" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-warning" style="width:150px"><i class="bi bi-pencil"></i> &nbsp; Update</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-primary" style="width:150px"><i class="bi bi-arrow-return-left"></i> &nbsp; Back to Index</a>
    </div>
</form>
