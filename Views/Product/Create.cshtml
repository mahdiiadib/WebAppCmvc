@*@model Product*@
@model ProdCatg

@{
    ViewData["Title"] = "Product Create";
}

<form method="post" asp-action="Create">
    <div class="p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add Product</h2>
            <hr />
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="@Model.prod.Name"></label>
            <input id="pname" asp-for="@Model.prod.Name" class="input-group-text" style="text-align: left; width: 30%;" />
            <span asp-validation-for="@Model.prod.Name" class="text-danger"></span>
            <br /><br />
            <label asp-for="@Model.prod.Description"></label>
            <textarea id="des" asp-for="@Model.prod.Description" class="input-group-text" style="width: 50%; height: 200px; text-align: left;"></textarea>
            <br /><br />
            <label asp-for="@Model.prod.ImagePath"></label><br />
            @*<input type="file" asp-for="@Model.prod.ImagePath" class="" />*@
            <input asp-for="@Model.prod.ImagePath" class="input-group-text" style="width: 60%; text-align: left;" />
            <br /><br />
            <label asp-for="@Model.prod.Price"></label><br />
            <input type="number" min="0" max="@int.MaxValue" asp-for="@Model.prod.Price" class="input-group-text" style="width: 20%;" />
            <span asp-validation-for="@Model.prod.Price" class="text-danger"></span>
            <br /><br />

            <label asp-for="@Model.prod.Type"></label><br />
            @Html.DropDownListFor(x=>x.prod.Type, Model.catgs, "---select---", new{@class="form-control", style="width: 25%; text-align: center; cursor: pointer;"})
            <br /><br />

        </div>
        <button type="submit" class="btn btn-info" style="width:150px" onclick="return confirm('Are you sure you want to add ' + document.getElementById('pname').value + '?')">
            <i class="bi bi-plus-square"></i> &nbsp; Add
        </button>
        <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:200px"><i class="bi bi-arrow-return-left"></i> &nbsp; Back to Index</a>
    </div>
</form>