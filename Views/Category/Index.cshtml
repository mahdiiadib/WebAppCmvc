@model List<Category>

@{
    ViewData["Title"] = "Category Index";
}

@if (TempData["success"] != null)
{
    <h3 style="color: lightblue">@TempData["success"]</h3>
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-info">
                <i class="bi bi-plus-square"></i> &nbsp; Create New Category
            </a>
        </div>
    </div>
</div>

<br />
<br />

<table class="table table-bordered table-striped text-center" style="width:100%">
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(Category x in Model)
        {
            <tr>
                <td width="25%">@x.Id</td>
                <td width="50%">@x.Name</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-controller="category" asp-action="Edit" asp-route-id="@x.Id" class="btn btn-outline-warning" ><i class="bi bi-pencil"></i> &nbsp; Edit</a>
                    </div>
                    <div class="btn-group" role="group">
                        <a asp-controller="category" asp-action="Delete" asp-route-id="@x.Id" class="btn btn-outline-danger"><i class="bi bi-trash3"></i> &nbsp; Delete</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>